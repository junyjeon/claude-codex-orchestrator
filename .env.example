# Logging
LOG_LEVEL=info

# Codex CLI Timeout (milliseconds) - for generate/review tools
CODEX_TIMEOUT=30000

# Codex Execute Timeout (milliseconds) - for autonomous execution tool
CODEX_EXECUTE_TIMEOUT=120000

# Security: Allowed working directories (colon-separated, like PATH)
# Default: $HOME
CODEX_ALLOWED_DIRS=/home/user/projects:/tmp

# Security: Allow danger-full-access sandbox mode (default: false)
# WARNING: Enables unrestricted file system access for Codex CLI
CODEX_ALLOW_DANGER_SANDBOX=false

# Security: Allow --full-auto mode (default: false)
# WARNING: Enables autonomous execution without human approval
CODEX_ALLOW_FULL_AUTO=false

# Security: Max concurrent Codex processes (default: 3, max: 10)
CODEX_MAX_CONCURRENT=3
